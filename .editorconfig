# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
[*.js, *.ts, *.json, *.md]
indent_style = space
indent_size = 2

# 2 space indentation for specific files
[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

# Max line length
max_line_length = 100
